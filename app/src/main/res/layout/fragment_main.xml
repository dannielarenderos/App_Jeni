<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.Fragment_Main">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Animal Care"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"
                app:fontFamily="cursive" android:textSize="56sp"
                android:textColor="#581564" android:layout_marginTop="95dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp"/>
        <ImageView
                android:src="@drawable/ic_help_black_24dp"
                android:layout_width="120dp"
                android:layout_height="115dp" android:id="@+id/iv_facts"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="68dp"
                android:layout_marginRight="68dp" android:layout_marginTop="52dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_associations"/>
        <ImageView
                android:src="@drawable/ic_people_black_24dp"
                android:layout_width="130dp"
                android:layout_height="100dp" android:id="@+id/iv_associations"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="68dp"
                android:layout_marginRight="68dp" android:layout_marginTop="224dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
                android:src="@drawable/ic_home_black_24dp"
                android:layout_width="140dp"
                android:layout_height="110dp"
                android:id="@+id/iv_animals" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:layout_marginTop="224dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_associations" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.6"/>
        <ImageView
                android:src="@drawable/ic_home_black_24dp"
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:id="@+id/iv_vet" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:layout_marginTop="540dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.154"/>
        <ImageView
                android:src="@drawable/ic_home_black_24dp"
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:id="@+id/iv_animal" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:layout_marginTop="548dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.762"/>
        <ImageView
                android:src="@drawable/ic_library_books_black_24dp"
                android:layout_width="100dp"
                android:layout_height="110dp" android:id="@+id/iv_laws"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp" android:layout_marginTop="52dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_animals"
                app:layout_constraintEnd_toStartOf="@+id/iv_facts" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.181"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>